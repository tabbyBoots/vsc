@model IEnumerable<Person>

@{
    ViewData["Title"] = "Demo16";
    Layout = "_Layout";
}

<h3 class="text-primary">Razor Demo16</h3>
<h4 class="text-danger">個人資料列表</h5>

    <table class="table table-bordered">
        <thead>
            <tr class="table-secondary">
                <th>
                    @Html.ActionLink("新增", "CreateEdit", "RazorDemo" , new { area = "" , id=0} , new {@class =
                    "btn btn-success"})
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PersonNo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PersonName)
                </th>
                <th>
                    備註
                </th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.ActionLink("修改", "CreateEdit", "RazorDemo" , new { area = "" , id=item.Id } , new {@class =
                        "btn btn-success"})
                    @Html.ActionLink("刪除", "Delete", "RazorDemo" , new { area = "" , id=item.Id } ,
                                        new { @class = "btn btn-danger", onclick = "return confirm('是否確定要刪除?');" })
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PersonNo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PersonName)
                    </td>
                    <td class="table-wrap"></td>
                </tr>
            }
        </tbody>
    </table>
