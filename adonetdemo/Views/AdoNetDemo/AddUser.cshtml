@model adonetdemo.Models.Users

@{
    ViewData["Title"] = "新增使用者";
}

<div class="card border-secondary card-size-small">
    <div class="card-header bg-secondary text-white">
        <h5>@ViewData["Title"]</h3>
    </div>
    <div class="card-body">
        @using (Html.BeginForm())
        {
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row form-group">
                <div class="control-label col-md-3">
                    @Html.DisplayNameFor(model => model.UserNo)
                </div>
                <div class="col-md-9">
                    @Html.EditorFor(model => model.UserNo, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.UserNo, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row form-group">
                <div class="control-label col-md-3">
                    @Html.DisplayNameFor(model => model.UserName)
                </div>
                <div class="col-md-9">
                    @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row form-group">
                <div class="control-label col-md-3">
                    @Html.DisplayNameFor(model => model.Remark)
                </div>
                <div class="col-md-9">
                    @Html.EditorFor(model => model.Remark, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Remark, "", new { @class = "text-danger" })
                </div>
            </div>
            <hr>
            <div class="row form-group">
                <div class="col-md-12">
                    <input type="submit" value="新增資料" class="btn btn-primary">
                    @Html.ActionLink("返回列表", "GetUserList", "adonetdemo", new { area = "" }, new { @class = "btn btn-success" })
                </div>
            </div>
        }
    </div>
</div>
